<body>
    <div class="container" id="quizContainer">
        <h1>–ì–æ—Ç–æ–≤ –ª–∏ —Ç—ã –∫ —Å–≤–æ–∏–º 30? üåü</h1>
        <div id="questions"></div>
    </div>

    <div class="container hidden" id="resultContainer">
        <h2>–†–µ–∑—É–ª—å—Ç–∞—Ç—ã:</h2>
        <p id="resultText"></p>
        <div class="secret-gift">
            <h3>–°–µ–∫—Ä–µ—Ç–Ω—ã–π –ø–æ–¥–∞—Ä–æ–∫ –¥–ª—è 30-–ª–µ—Ç–Ω–∏—Ö! üî•</h3>
            <button onclick="showSecretGift()">–û—Ç–∫—Ä—ã—Ç—å</button>
        </div>
    </div>

    <div class="modal hidden" id="giftModal">
        <p>–í—ã –≤—ã–∏–≥—Ä–∞–ª–∏ –∫—É–ø–æ–Ω –Ω–∞ —Å–∫–∏–¥–∫—É 15% –≤ –î–∏–∫—Å–∏! üõí</p>
        <button onclick="replaceGift()">–ó–∞–º–µ–Ω–∏—Ç—å –Ω–∞ –Ω–µ–æ–±—ã—á–Ω–æ–µ</button>
        <button onclick="closeModal()">–û—Å—Ç–∞–≤–∏—Ç—å</button>
    </div>

    <script>
        let currentQuestion = 0;
        const questions = Array(20).fill().map((_,i) => `–í–æ–ø—Ä–æ—Å ${i+1} –ì–æ—Ç–æ–≤ –ª–∏ —Ç—ã –∫ ${i%2 ? '–Ω–æ–≤—ã–º' : '—Å—Ç–∞—Ä—ã–º'} –≤—ã–∑–æ–≤–∞–º 30-–ª–µ—Ç–∏—è?`);

        function initQuiz() {
            showQuestion();
        }

        function showQuestion() {
            const questionsDiv = document.getElementById('questions');
            questionsDiv.innerHTML = `
                <div class="question-box">
                    <h3>${questions[currentQuestion]}</h3>
                    <button onclick="nextQuestion()">–î–∞</button>
                    <button onclick="nextQuestion()">–ù–µ—Ç</button>
                </div>
            `;
            if(currentQuestion >= questions.length-1) {
                setTimeout(showResults, 1000);
            }
        }

        function nextQuestion() {
            currentQuestion++;
            if(currentQuestion < questions.length) {
                showQuestion();
            }
        }

        function showResults() {
            document.getElementById('quizContainer').classList.add('hidden');
            document.getElementById('resultContainer').classList.remove('hidden');
            document.getElementById('resultText').innerHTML = `
                <p>üéâ –¢—ã –æ—Ñ–∏—Ü–∏–∞–ª—å–Ω–æ –≥–æ—Ç–æ–≤ –∫ 30 –≥–æ–¥–∞–º! üéâ</p>
                <p>–†–µ–∫–æ–º–µ–Ω–¥—É–µ–º—ã–µ –ø–æ–¥–∞—Ä–∫–∏:</p>
                <ul>
                    <li>–ö–æ—Å–º–µ—Ç–∏–∫–∞</li>
                    <li>–ö–Ω–∏–≥–∞</li>
                    <li>–°–µ—Ä—Ç–∏—Ñ–∏–∫–∞—Ç</li>
                </ul>
            `;
        }

        function showSecretGift() {
            document.getElementById('giftModal').classList.remove('hidden');
        }

        function closeModal() {
            document.getElementById('giftModal').classList.add('hidden');
        }

        function replaceGift() {
            document.body.classList.add('turquoise-theme');
            document.getElementById('giftModal').innerHTML = `
                <h3>–ü—Ä–∏–º–∏ —É—Å–ª–æ–≤–∏—è:</h3>
                <p>–¢—ã –Ω–µ –±—É–¥–µ—à—å –º–µ–Ω—è –æ–±–∏–∂–∞—Ç—å?</p>
                <button onclick="nextCondition(1)">–î–∞</button>
                <button onclick="nextCondition(1)">–ù–µ—Ç</button>
            `;
        }

        function nextCondition(step) {
            const texts = [
                '–¢—ã –±—É–¥–µ—à—å –º–æ–∏–º –¥—Ä—É–≥–æ–º?',
                '–¢—ã –±—É–¥–µ—à—å –º–µ–Ω—è –ª—é–±–∏—Ç—å?',
                '–¢–æ—á–Ω–æ-—Ç–æ—á–Ω–æ –±—É–¥–µ—à—å?'
            ];
            
            if(step <= texts.length) {
                document.getElementById('giftModal').innerHTML = `
                    <h3>${texts[step-1]}</h3>
                    <button onclick="nextCondition(${step+1})">–î–∞</button>
                    <button onclick="nextCondition(${step+1})">–ù–µ—Ç</button>
                `;
            } else {
                document.getElementById('giftModal').innerHTML = `
                    <p class="heart">‚ù§Ô∏è</p>
                    <p>–•–æ—Ä–æ—à–æ, —è –≤–µ—Ä—é —Ç–µ–±–µ, –∑–∞–±–µ—Ä–∏ –º–µ–Ω—è –∫ —Å–µ–±–µ, —è —É –ú–∞–∫—Å–∏–º–∞ –≤ —Å—É–º–∫–µ!</p>
                `;
            }
        }

        window.onload = initQuiz;
    </script>
